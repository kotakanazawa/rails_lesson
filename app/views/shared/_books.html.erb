<h2>書籍メモ</h2>
<table>
  <thead>
    <tr>
      <th><%= Book.human_attribute_name(:title) %></th>
      <th><%= Book.human_attribute_name(:memo) %></th>
      <th><%= Book.human_attribute_name(:author) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
      </tr>
    <% end %>
  </tbody>
</table>
