<h1>ユーザー一覧</h1>
<ul>
  <% @users.each do |user| %>
    <% if current_user != user %>
    <li>
      <%= link_to user.name, user_path(user.id) %>
      <% if user.followed_by?(current_user) %>
        <%= link_to "フォロー解除", user_follows_path(user.id), method: :delete %>
      <% else %>
        <%= link_to "フォローする", user_follows_path(user.id), method: :post %>
      <% end %>
    </li>
    <% end %>
  <% end %>
</ul>
